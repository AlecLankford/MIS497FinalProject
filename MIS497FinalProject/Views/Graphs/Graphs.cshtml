
@model  MIS497FinalProject.Models.Graphs
@{
    ViewBag.Title = "Graphs";
}

<h2>Health Reports</h2>

<head>
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">
        google.charts.load('current', { packages: ['corechart'] });
        google.charts.setOnLoadCallback(drawChart);

        function drawChart() {
            // Define the chart to be drawn.
            var data = new google.visualization.DataTable();
            data.addColumn('string', 'Element');
            data.addColumn('number', 'Percentage');
            data.addRows([
                ['Protein', @ViewBag.ProteinTotal],
                ['Carbs', @ViewBag.CarbTotal],
                ['Fat', @ViewBag.FatTotal]
            ]);

            var options = { 'title': 'Food Nutritional Composition', 'width': 550, 'height': 400 };

            var chart = new google.visualization.PieChart(document.getElementById('nutritionalChart'));
            chart.draw(data, options);
        }
     
    </script>
</head>
<body>
    <div id="nutritionalChart" />
    
</body>